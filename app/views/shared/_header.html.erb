<div class="masthead clearfix">
  <div class="container">
    <div class="logo pull-left">
      <%= link_to "Instagram Gallery", root_path %>
    </div>
    <% unless current_user %>
      <div class="socials pull-right" data-toggle="tooltip" data-placement="left" title="Click to Sign In">
        <%= link_to content_tag(:span, "Sign in", class: "sr-only") + content_tag(:i, nil, class: "fa fa-instagram"), user_instagram_omniauth_authorize_path %>
      </div>
    <% else %>
      <div class="socials pull-right">
       <%= link_to content_tag(:span, "Sign out", class: "sr-only") + content_tag(:i, nil, class: "fa fa-sign-out"), destroy_user_session_path, method: :delete %>
      </div>
      <div class="profile_picture pull-right">
        <%= current_user.username %>
        <%= image_tag current_user.profile_picture, class: 'profile-img img-circle'  %>
      </div>
    <% end %>
  </div>
</div>